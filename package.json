{
  "name": "profile-card",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch": "node-sass sass/main.scss css/style.css --watch",
    "start": "npm-run-all --parallel live-server watch",
    "compile": "node-sass sass/main.scss css/style.comp.css",
    "concat": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix": "postcss --use autoprefixer -b 'last 5 versions' css/style.concat.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile concat prefix compress"
  },
  "author": "Lynette Lopez",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.3",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}